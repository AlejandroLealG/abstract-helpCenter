---
import Encabezado from "../components/Encabezado.astro";
import Buscador from "../components/Buscador.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Abstract | Help Center">
	<div class="min-h-screen bg-gray-100 p-8">
		<div class="bg-black text-gray-400 p-4 rounded-t-lg">
			<Encabezado />
		</div>
		<main>
			<div class="px-8 flex-col bg-[#dadbf1] py-10 items-center">
				<Buscador />
			</div>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-2">
				<div class="p-6 bg-white shadow rounded">
					<img
						src="/icons/..."
						alt="Branches"
						class="w-12 h-12 mb-4"
					/>
					<h2 class="text-xl font-semibold">Branches</h2>
					<p class="mt-2">
						Abstract Branches lets you manage, version, and document
						your designs in one place.
					</p>
					<a href="#" class="text-blue-500 mt-2 inline-block"
						>Learn More →</a
					>
				</div>
				<div class="p-6 bg-white shadow rounded">
					<img
						src="/icons/..."
						alt="Manage your account"
						class="w-12 h-12 mb-4"
					/>
					<h2 class="text-xl font-semibold">Manage your account</h2>
					<p class="mt-2">
						Configure your account settings, such as your email,
						profile details, and password.
					</p>
					<a href="#" class="text-blue-500 mt-2 inline-block"
						>Learn More →</a
					>
				</div>
				<div class="p-6 bg-white shadow rounded">
					<img
						src="/icons/..."
						alt="Manage organizations, teams, and projects"
						class="w-12 h-12 mb-4"
					/>
					<h2 class="text-xl font-semibold">
						Manage organizations, teams, and projects
					</h2>
					<p class="mt-2">
						Use Abstract organizations, teams, and projects to
						organize your people and your work.
					</p>
					<a href="#" class="text-blue-500 mt-2 inline-block"
						>Learn More →</a
					>
				</div>
				<div class="p-6 bg-white shadow rounded">
					<img
						src="/icons/..."
						alt="Manage billing"
						class="w-12 h-12 mb-4"
					/>
					<h2 class="text-xl font-semibold">Manage billing</h2>
					<p class="mt-2">
						Change subscriptions and payment details.
					</p>
					<a href="#" class="text-blue-500 mt-2 inline-block"
						>Learn More →</a
					>
				</div>
				<div class="p-6 bg-white shadow rounded">
					<img
						src="/icons/..."
						alt="Authenticate to Abstract"
						class="w-12 h-12 mb-4"
					/>
					<h2 class="text-xl font-semibold">
						Authenticate to Abstract
					</h2>
					<p class="mt-2">
						Set up and configure SSO, SCIM, and Just-in-Time
						provisioning.
					</p>
					<a href="#" class="text-blue-500 mt-2 inline-block"
						>Learn More →</a
					>
				</div>
				<div class="p-6 bg-white shadow rounded">
					<img
						src="/icons/..."
						alt="Abstract support"
						class="w-12 h-12 mb-4"
					/>
					<h2 class="text-xl font-semibold">Abstract support</h2>
					<p class="mt-2">Get in touch with a human.</p>
					<a href="#" class="text-blue-500 mt-2 inline-block"
						>Learn More →</a
					>
				</div>
			</div>
		</main>

		<footer class="text-gray-600">
			<Footer />
		</footer>
	</div>
</Layout>
